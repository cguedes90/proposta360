NODE_ENV=development
PORT=3000

# Database - Configure com sua string de conexão PostgreSQL
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# JWT - Gere uma chave secreta forte
JWT_SECRET=your_super_strong_jwt_secret_here

# Email - Configure com seu provedor de email
SMTP_HOST=smtp.zoho.com
SMTP_PORT=587
SMTP_USER=seu_email@dominio.com
SMTP_PASSWORD=sua_senha_de_app

# WhatsApp (configure com API do WhatsApp Business ou similar)
WHATSAPP_API_URL=
WHATSAPP_TOKEN=

# Upload
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Frontend URL (para produção usar domínio do Vercel)
FRONTEND_URL=http://localhost:3000